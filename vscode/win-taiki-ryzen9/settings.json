{
  // = VSCode =
  "editor.fontSize": 13,
  "editor.fontFamily": "Consolas, 'Courier New', monospace, 'CodeNewRoman Nerd Font'",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 120],
  "editor.scrollOnMiddleClick": true,
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "[One Dark Pro Night Flat]": {
      "comments": "#afafaf"
    }
  },
  "editor.wordWrap": "off",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.suggest.enabled": false,
  "update.showReleaseNotes": false,
  "workbench.colorTheme": "One Dark Pro Night Flat",
  "workbench.colorCustomizations": {
    "[One Dark Pro Night Flat]": {
      "editor.foreground": "#f0f0f0",
      // background colors
      "editor.background": "#101010",
      "terminal.background": "#101010",
      "sideBar.background": "#101010",
      "activityBar.background": "#101010",
      // border colors
      "activityBar.border": "#9696af",
      "editorGroup.border": "#9696af",
      "input.border": "#9696af",
      "panel.border": "#9696af",
      "statusBar.border": "#9696af",
      "sideBar.border": "#9696af",
      "sideBarSectionHeader.border": "#9696af",
      "tab.border": "#9696af",
      "titleBar.border": "#9696af"
    }
  },
  "workbench.secondarySideBar.showLabels": true,
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.renderIndentGuides": "always",
  // = Languages =
  // == C/C++ ==
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.wordWrap": "on"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.wordWrap": "on"
  },
  "C_Cpp.clang_format_fallbackStyle": "LLVM",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.enabled": true,
  // == Haskell ==
  "haskell.manageHLS": "GHCup",
  // == json ==
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == jsonc ==
  "[jsonc]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == Markdown ==
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.indentSize": "tabSize",
    "editor.tabSize": 4
  },
  // == Python ==
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": false,
    "editor.indentSize": "tabSize",
    "editor.tabSize": 4
  },
  // == Rust ==
  "rust-analyzer.check.command": "clippy",
  // == Tablegen ==
  "[tablegen]": {
    "editor.rulers": [100]
  },
  // == Web Development ==
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == JavaScript ==
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == TypeScript React ==
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // = Development Tools =
  // == CMake ==
  "cmake.configureOnOpen": false,
  "cmake.ignoreCMakeListsMissing": true,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.showConfigureWithDebuggerNotification": false,
  // == Git ==
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  // == Github Copilot ==
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "cpp": false,
    "tablegen": false,
    "python": true
  },
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Follow the Semantic Commit Message convention strictly. Format: <type>(<scope>): <subject>."
    },
    {
      "text": "Allowed <type> values: feat, fix, docs, style, refactor, test, chore."
    },
    {
      "text": "Use lower-case <type>; <scope> is optional and must be lower-case. Example: feat(api): add OAuth2 login."
    },
    {
      "text": "The <subject> must be an imperative, present-tense verb, max 50 characters, no trailing period."
    },
    {
      "text": "Wrap body at 72 chars and explain the motivation and context using bullet points."
    }
  ],
  // = other extensions =
  "center-editor-window.offset": 0,
  "color-highlight.languages": ["!c", "!cpp", "!llvm", "!tablegen", "*"],
  "dontCrossLine.excludeLanguages": [
    "markdown",
    "plaintext",
    "json",
    "tablegen",
    "jsonc",
    "log",
    "llvm",
    "typescript"
  ],
  "hexeditor.columnWidth": 16,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",
  "hexeditor.showDecodedText": true,
  "chat.mcp.autostart": "newAndOutdated"
}
