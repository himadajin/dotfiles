{
  // = general =
  // == editor ==
  "editor.fontSize": 11.5,
  "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace, 'CodeNewRoman Nerd Font'",
  "editor.formatOnType": false,
  "editor.maxTokenizationLineLength": 15000,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 100],
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "[One Dark Pro Night Flat]": {
      "comments": "#afafaf"
    }
  },
  // == explorer ==
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "extensions.ignoreRecommendations": true,
  // == terminal ==
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.suggest.enabled": false,
  // == workbench ==
  "workbench.colorTheme": "One Dark Pro Night Flat",
  "workbench.colorCustomizations": {
    "[One Dark Pro Night Flat]": {
      "editor.foreground": "#f0f0f0",
      // background colors
      "editor.background": "#101010",
      "terminal.background": "#101010",
      "sideBar.background": "#101010",
      "activityBar.background": "#101010",
      // border colors
      "activityBar.border": "#9696af",
      "editorGroup.border": "#9696af",
      "input.border": "#9696af",
      "panel.border": "#9696af",
      "statusBar.border": "#9696af",
      "sideBar.border": "#9696af",
      "sideBarSectionHeader.border": "#9696af",
      "tab.border": "#9696af",
      "titleBar.border": "#9696af"
    }
  },
  "workbench.secondarySideBar.showLabels": false,
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.renderIndentGuides": "always",
  // == other ==
  "files.associations": {
    "*.inc": "cpp"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "update.showReleaseNotes": false,
  // = Extension=
  // == cmake ==
  "cmake.configureOnOpen": false,
  "cmake.ignoreCMakeListsMissing": true,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.showConfigureWithDebuggerNotification": false,
  // == git ==
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  // == GitHub Copilot ==
  "chat.agent.maxRequests": 50,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "rust": true,
    "cpp": true
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Use conventional commit message format." }
  ],
  // == GitLens ==
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  // == other extensions ==
  "bookmarks.saveBookmarksInProject": true,
  "center-editor-window.offset": 0,
  "codetour.showMarkers": false,
  "color-highlight.languages": [
    "javascript",
    "typescript",
    "json",
    "html",
    "css",
    "jsx",
    "tsx"
  ],
  "dont-cross-line.languages": ["c", "cpp"],
  "hexeditor.columnWidth": 16,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",
  "hexeditor.showDecodedText": true,
  "indentRainbow.errorColor": "rgba(128,32,32,0.2)",
  "makefile.configureOnOpen": false,
  "lldb.suppressUpdateNotifications": true,
  // = language =
  // == c, cpp ==
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.indentSize": 2,
    "editor.tabSize": 2
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.indentSize": 2,
    "editor.tabSize": 2
  },
  "C_Cpp.clang_format_fallbackStyle": "LLVM",
  "C_Cpp.default.compilerPath": "/usr/bin/clang",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.inlayHints.parameterNames.enabled": true,
  "C_Cpp.inlayHints.referenceOperator.enabled": true,
  // == css ==
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == haskell ==
  "haskell.manageHLS": "GHCup",
  // == html ==
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == json, jsonc ==
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggest.insertMode": "replace",
    "editor.quickSuggestions": {
      "strings": true
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == javascript, typescript, typescriptreact ==
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // == log ==
  "[log]": {
    "editor.wordWrap": "on"
  },
  // == python ==
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.indentSize": 4,
    "editor.tabSize": 4
  },
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.14",
  // == rust ==
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.indentSize": 4,
    "editor.tabSize": 4,
    "editor.rulers": [120]
  },
  "rust-analyzer.check.command": "clippy"
  // = other settings =
}
